    <title>cnc_getsraminfo</title>



    <declare>
      <vc>
        <include>#include "fwlib32.h"</include>
        <prottype>
            FWLIBAPI short WINAPI cnc_getsraminfo(unsigned short FlibHndl,  ODBSINFO *sinfo);
        </prottype>
      </vc>
